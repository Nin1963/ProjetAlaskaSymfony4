{% extends 'base.html.twig' %}

{% form_theme formChapter 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
<script src='https://cloud.tinymce.com/stable/tinymce.min.js'></script>
<script>
    tinymce.init({
      selector: 'textarea'
    });
</script>
{% endblock %}

{% block body %}
    <div class="jumbotron">
        {% if editMode %}
        <h1>Modifier le chapitre</h1>
        {% else %}
        <h1>Ajouter un chapitre</h1>
        {% endif %}

    {{ form_start(formChapter) }}
    <label for="title">Titre</label>
    {{ form_row(formChapter.title) }}
    <label for="content">Nouveau chapitre</label>
    {{ form_row(formChapter.content) }}

    <button type="submit" class="btn btn-primary">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter le nouveau chapitre</button>
        {% endif %}

    {{ form_end(formChapter) }}
    </div>
{% endblock %}